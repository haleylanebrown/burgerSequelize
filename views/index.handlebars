<div class="container" id="overall">
    <div class="container" id="addBurgerRow">
        <h1 id="burgerTitle">Eat-Da-Burger!</h1>
        <div class="row">
            <div class="container">
                <h2>Add a Burger:</h2>
                <form class="create-form">

                    <div class="form-group">
                        <label for="ca">Burger Name:</label>
                        <input type="text" id="ca" name="name">
                    </div>

                    <button type="submit" id="addBurger">Add Burger</button>
                    <button id="deleteBurgers">Clear All Burgers</button>
                </form>
            </div>
        </div>
    </div>
    <div class="container" id="burgerInfoRow">
        <div class="row">
            <div class="container col-md-4">
                <h2>Burger Menu:</h2>
                <ul style="list-style-type:none;" id="menuList">
                    {{#each burger}}
                    {{#unless devoured}}
                    <li>{{burger_name}}
                        <button type="submit" id="devour" data-id="{{id}}">Devour it!</button>
                    </li>
                    {{!-- {{> burgers/burger-block devoured=true}} --}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="container col-md-4">
                <h2>Devoured Burgers:</h2>

                <ul style="list-style-type:none;">
                    {{#each burger}}
                    {{#if devoured}}
                    <li>{{burger_name}}</li>
                    {{!-- {{> burgers/burger-block devoured=false}} --}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>